<Window x:Class="Patcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Patcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <ProgressBar x:Name="progressDownload" HorizontalAlignment="Left" Height="32" Margin="0,247,0,0" VerticalAlignment="Top" Width="517"/>
        <Label x:Name="labelDownloadProgress" Content="{}{0}/{1} bytes ({2}%)" Margin="0,249,142,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Right" Width="208"/>
        <Label x:Name="labelFileName" Content="Label" HorizontalAlignment="Left" Margin="10,197,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
